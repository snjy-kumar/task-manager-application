{
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(ls*)",
      "Bash(docker-compose ps*)",
      "Bash(docker-compose logs*)",
      "Bash(docker-compose up -d mongodb)",
      "Bash(cd backend && npm test*)",
      "Bash(cd backend && npm run test*)",
      "Bash(cd backend && npm run dev*)",
      "Bash(cd frontend && npm run lint*)",
      "Bash(cd frontend && npm run build*)",
      "Bash(cd frontend && npm run dev*)",
      "Bash(gh issue view*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash /home/sanjay/projects/task-manager-application/.claude/hooks/lint-on-edit.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash /home/sanjay/projects/task-manager-application/.claude/hooks/block-env-writes.sh"
          }
        ]
      }
    ]
  }
}
